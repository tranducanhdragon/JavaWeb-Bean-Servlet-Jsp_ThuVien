<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>Servlet.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSach</servlet-name>
        <servlet-class>Servlet.ControllerSach</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerGioHang</servlet-name>
        <servlet-class>Servlet.ControllerGioHang</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerChiTietSach</servlet-name>
        <servlet-class>Servlet.ControllerChiTietSach</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerLogout</servlet-name>
        <servlet-class>Servlet.ControllerLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerDeleteSachByIDGioHang</servlet-name>
        <servlet-class>Servlet.ControllerDeleteSachByIDGioHang</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/ControllerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSach</servlet-name>
        <url-pattern>/ControllerSach</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerGioHang</servlet-name>
        <url-pattern>/ControllerGioHang</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerChiTietSach</servlet-name>
        <url-pattern>/ControllerChiTietSach</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLogout</servlet-name>
        <url-pattern>/ControllerLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerDeleteSachByIDGioHang</servlet-name>
        <url-pattern>/ControllerDeleteSachByIDGioHang</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
